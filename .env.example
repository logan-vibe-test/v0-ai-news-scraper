# =============================================================================
# AI Voice News Scraper Environment Configuration
# =============================================================================

# OpenAI API Configuration (Required for summarization and sentiment analysis)
OPENAI_API_KEY=your_openai_api_key_here

# =============================================================================
# Reddit API Configuration (Required for Reddit scraping)
# =============================================================================
# Get these from: https://www.reddit.com/prefs/apps
REDDIT_CLIENT_ID=your_reddit_client_id
REDDIT_CLIENT_SECRET=your_reddit_client_secret
REDDIT_USER_AGENT=ai_voice_news_scraper_v1.0_by_yourusername

# =============================================================================
# Twitter/X API Configuration (Required for Twitter scraping)
# =============================================================================
# Get these from: https://developer.twitter.com/en/portal/dashboard
TWITTER_API_KEY=your_twitter_api_key
TWITTER_API_SECRET=your_twitter_api_secret
TWITTER_ACCESS_TOKEN=your_twitter_access_token
TWITTER_ACCESS_SECRET=your_twitter_access_secret
TWITTER_BEARER_TOKEN=your_twitter_bearer_token

# =============================================================================
# Database Configuration
# =============================================================================
# MongoDB connection string - can be local or cloud (MongoDB Atlas)
MONGODB_URI=mongodb://localhost:27017
# Or for MongoDB Atlas: mongodb+srv://username:password@cluster.mongodb.net/
DB_NAME=ai_voice_news

# =============================================================================
# Slack Notification Configuration (Optional)
# =============================================================================
# Get these from: https://api.slack.com/apps
SLACK_API_TOKEN=xoxb-your-slack-bot-token
SLACK_CHANNEL=#ai-voice-news

# =============================================================================
# Email Notification Configuration (Optional)
# =============================================================================
# SMTP server settings (Gmail example shown)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password
EMAIL_FROM=ai-news-scraper@yourdomain.com
EMAIL_TO=recipient@yourdomain.com

# =============================================================================
# Scraper Configuration
# =============================================================================
# How often to scrape sources (in seconds)
SCRAPING_INTERVAL=3600

# How often to send digests (in seconds) - 86400 = 24 hours
DIGEST_INTERVAL=86400

# Enable/disable notification channels
ENABLE_SLACK=true
ENABLE_EMAIL=true

# Logging level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO
